{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bitloops",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bitloops",
				"match": "\\b(if|while|for|return|ValueObject|DTO|Props|RESTController|UseCase|Feature|string|optional|const|let|boolean)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bitloops",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bitloops",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.bitloops"
}